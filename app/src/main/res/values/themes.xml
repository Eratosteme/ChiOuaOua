<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChiOuaOua" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/palette1_bleu</item>
        <item name="colorPrimaryVariant">@color/palette1_bleu_marine</item>
        <item name="colorOnPrimary">@color/palette1_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/palette2_vert</item>
        <item name="colorSecondaryVariant">@color/palette2_red</item>
        <item name="colorOnSecondary">@color/palette2_bleu</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ChiOuaOua.Fullscreen" parent="Theme.ChiOuaOua">
        <item name="android:actionBarStyle">@style/Widget.Theme.ChiOuaOua.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ChiOuaOua.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>